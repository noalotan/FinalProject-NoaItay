pipeline {
    agent any
    
    environment {
        DOMAIN = 'itay-noa.online'
        API_KEY = 'h1okCf5NCjpb_G7fc2KGSt1oKUxAfG5x48d'
        API_SECRET = 'HZcaigcV5VqZx3idQNdFUp'
    }

    stages {
        stage('Setup AWS Credentials') {
            steps {
                withCredentials([aws(credentialsId: 'aws credentials')]) {
                    script {
                        env.AWS_ACCESS_KEY_ID = "${AWS_ACCESS_KEY_ID}"
                        env.AWS_SECRET_ACCESS_KEY = "${AWS_SECRET_ACCESS_KEY}"
                    }
                }
            }
        }

        stage('Check GoDaddy API Key Permissions') {
            steps {
                script {
                    // Use a shell command to encode credentials
                    def authHeader = sh(script: "echo -n '${API_KEY}:${API_SECRET}' | base64", returnStdout: true).trim()

                    def response = sh(script: """
                        curl -X GET "https://api.godaddy.com/v1/domains/${DOMAIN}/records" \
                        -H "Authorization: Basic ${authHeader}" \
                        -H "Content-Type: application/json"
                    """, returnStdout: true)
                    
                    echo "API Key Permission Check Response: ${response}"
                }
            }
        }

        stage('Set Subdomains') {
            steps {
                script {
                    def subdomains = ['statuspage', 'grafana']

                    // Retrieve Load Balancer DNS
                    def ingressName = 'alb-ingress-rules'  // Replace with your actual Ingress name
                    def namespace = 'status-page'  // Replace with your actual namespace
                    
                    def loadBalancerDNS = sh(script: "kubectl get ingress ${ingressName} -n ${namespace} -o jsonpath='{.status.loadBalancer.ingress[0].hostname}'", returnStdout: true).trim()
                    echo "Load Balancer DNS: ${loadBalancerDNS}"

                    // Update DNS records for each subdomain
                    subdomains.each { subdomain ->
                        def url = "https://api.godaddy.com/v1/domains/${DOMAIN}/records/A/${subdomain}"

                        def payload = subdomain == 'statuspage' ?
                            "[{\"data\": \"${loadBalancerDNS}\", \"ttl\": 600}]" :
                            "[{\"data\": \"${DOMAIN}\", \"ttl\": 600}]"

                        def response = sh(script: """
                            curl -X PUT "${url}" \
                            -H "Authorization: Basic ${authHeader}" \
                            -H "Content-Type: application/json" \
                            -d '${payload}'
                        """, returnStdout: true)

                        echo "Response for ${subdomain}.${DOMAIN}: ${response}"
                    }
                }
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline finished.'
        }
        success {
            echo 'DNS update was successful!'
        }
        failure {
            echo 'DNS update failed!'
        }
    }
}
