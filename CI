pipeline {
    agent any

    stages {
        stage('Setup Virtual Environment') {  // New stage for virtual environment setup
            steps {
                // Move to the /opt/status-page directory and create a virtual environment
                dir('opt/status-page') {
                    sh '''
                    python3 -m venv venv  // Create a virtual environment in the opt/status-page directory
                    source venv/bin/activate  // Activate the virtual environment
                    '''
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('opt/status-page') {
                    sh '''
                    source venv/bin/activate
                    pip install -r requirements.txt
                    pip install flake8 black
                    '''
                }
            }
        }

        stage('Lint Code') {
            steps {
                dir('opt/status-page') {
                    sh '''
                    source venv/bin/activate
                    flake8 .
                    black --check .
                    '''
                }
            }
        }

        stage('Run Tests') {
            steps {
                dir('opt/status-page') {
                    sh '''
                    source venv/bin/activate
                    python manage.py test
                    '''
                }
            }
        }
    }

    post {
        success {
            echo 'All stages passed successfully!'
        }
        failure {
            echo 'One or more stages failed.'
        }
    }
}
