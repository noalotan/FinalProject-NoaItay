pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                script {
                    if (env.CHANGE_ID) {
                        echo "Building PR ${env.CHANGE_ID} from ${env.CHANGE_BRANCH} to ${env.CHANGE_TARGET}"
                    } else {
                        echo "Building branch ${env.BRANCH_NAME}"
                    }
                }
            }
        }
        stage('Test') {
            steps {
                echo "Running tests..."
                // Add your test steps here
            }
        }
    }
}
